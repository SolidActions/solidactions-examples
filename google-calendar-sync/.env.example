# Google OAuth tokens (managed and auto-refreshed by SolidActions platform)
GCAL_OAUTH_TOKEN=managed-by-solidactions
GSHEET_OAUTH_TOKEN=managed-by-solidactions

# Calendar IDs to sync bidirectionally
CALENDAR_A_ID=your-calendar-a@group.calendar.google.com
CALENDAR_B_ID=your-calendar-b@group.calendar.google.com

# Prefixes for synced event titles (e.g. "[Pattern] Meeting")
CALENDAR_A_PREFIX=[CalA]
CALENDAR_B_PREFIX=[CalB]

# Google Sheet for tracking synced events
SPREADSHEET_ID=your-spreadsheet-id

# Maximum events to fetch per calendar (use 20 for dev, 2500 for production)
MAX_EVENTS=2500

# How many days into the future to sync
DAYS_AHEAD=180

# Telegram error notifications (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# SolidActions API key (for local development)
SOLIDACTIONS_API_KEY=your-api-key-here
